<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
         ButtonGroupView specific attributes. These attributes are used to customize 
		a ButtonGroupView view in XML files.
    -->
    <declare-styleable name="ButtonGroupLayout">
        <attr name="isNeedFocus" format="boolean"></attr>
        <!-- The start angel of these button group -->
        <attr name="startAngel" format="float" />
        <!-- The end angel of these button group -->
        <attr name="endAngel" format="float" />
        <!-- The buttons count of these button group -->
        <attr name="buttonCount" format="integer" />
        <!-- The layout radio for the button to layout in en cicle -->
        <attr name="layoutRadio" format="integer|float" />
        <!-- The item radio for this view to judege item click -->
        <attr name="itemRadio" format="integer|float"></attr>
    </declare-styleable>

</resources>