<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <!-- 按下状态时的效果 -->
    <item android:drawable="@drawable/bt_month_pressed" android:state_pressed="true"/>
    <!-- 选中状态效果 -->
    <item android:drawable="@drawable/bt_month_pressed" android:state_selected="true"/>
    <item android:drawable="@drawable/bt_month_pressed" android:state_focused="true"/>   
    <item android:drawable="@drawable/bt_month_pressed" android:state_checked="true"/>       
    <!-- 默认状态下的显示效果 -->
    <item android:drawable="@drawable/bt_month"/>

</selector>