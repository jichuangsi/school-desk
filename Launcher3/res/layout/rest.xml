<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night" >

  
    
    <ImageView
        android:id="@+id/batteryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/stars_bg" />

    <ImageView
        android:id="@+id/frameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/stars_bg2" />

    <ImageButton
        android:id="@+id/girlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:onClick="handleClick"
        android:src="@drawable/sleeping" />

    <RelativeLayout
        android:id="@+id/passwordLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="100dp" >

        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="@string/parent_password" />


        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeView"
            android:layout_alignParentLeft="true"
            android:inputType="textPassword" />

           <ImageButton
               android:id="@+id/submit_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@+id/passwordEdit"
               android:layout_marginBottom="5dp"
               android:layout_marginLeft="10dp"
               android:layout_toRightOf="@+id/passwordEdit"
               android:background="@null"
               android:onClick="handleClick"
               android:src="@drawable/unlock" />

    </RelativeLayout>
    
      <TextView
        android:id="@+id/textView0"
        style="@style/WarningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/rest_time" />

</RelativeLayout>
