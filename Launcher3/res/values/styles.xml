<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Light"></style>

    <style name="AppThemeFullScreen" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        
    </style>

    <style name="Theme_NT_NB" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="NoTitleTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in_fast</item>
        <item name="android:windowExitAnimation">@anim/fade_out_fast</item>
    </style>

    <style name="WorkspaceIcon">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/shortcut_selector</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="WorkspaceIcon.Portrait">
        <item name="android:drawablePadding">20dip</item>
        <item name="android:paddingTop">20dip</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:layout_marginTop">13dip</item>
        <item name="android:layout_marginBottom">8dip</item>
    </style>

    <style name="WorkspaceIcon.Landscape">
        <item name="android:drawablePadding">20dip</item>
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">12dip</item>
    </style>

    <style name="WarningText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>

    <!-- ============================folder.xml============================= -->
    <style name="fill_common">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="wrap_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_trunk" parent="fill_common">
        <item name="android:layout_margin">10dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/list_container_land_1024x768</item>
    </style>

    <style name="main_header" parent="wrap_common">
        <item name="android:background">@drawable/list_container_title_bg</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="header_tv" parent="wrap_common">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="header_btn" parent="wrap_common">
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:background">@drawable/back_btn_bg</item>
    </style>

</resources>