<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeFullscreen" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:textSize">16sp</item>
    </style>
    
     <style name="ThemeFullscreen_pc" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>     
    </style>

    <style name="ThemeFullscreen2" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeNoBgNoTb" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--
             Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used.
        -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="KidsBrowserTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <style name="h1">
        <item name="android:textSize">26sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="h2">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
     <style name="h3">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Light"></style>

    <style name="AppThemeNoTitle" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="AppThemeFullScreen" parent="android:Theme.Light.NoTitleBar.Fullscreen"></style>

</resources>