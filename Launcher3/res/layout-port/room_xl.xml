<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/room_bg" >

    <ImageView
        android:id="@+id/promoteView"
        android:layout_width="250dp"
        android:layout_height="209dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:onClick="handleClick"
        android:src="@drawable/xl_promote" />

    <ImageView
        android:id="@+id/spaceView"
        android:layout_width="250dp"
        android:layout_height="209dp"
        android:layout_alignLeft="@+id/promoteView"
        android:layout_below="@+id/promoteView"
        android:onClick="handleClick"
        android:src="@drawable/xl_space" />
    
    <ImageView
        android:id="@+id/homeworkView"
        android:layout_width="250dp"
        android:layout_height="209dp"
        
        android:layout_alignTop="@+id/promoteView"
        android:layout_toRightOf="@+id/promoteView"
        android:layout_marginLeft="60dp"
        android:onClick="handleClick"
        android:src="@drawable/xl_homework" />
    
    <ImageView
        android:id="@+id/tutorView"
        android:layout_width="250dp"
        android:layout_height="209dp"
 		android:layout_alignLeft="@+id/homeworkView"
        android:layout_below="@+id/homeworkView"
        android:onClick="handleClick"
        android:src="@drawable/xl_tutor" />

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spaceView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-30dp" >

        <ImageView
            android:id="@+id/slide"
            android:layout_width="530dp"
            android:layout_height="509dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/board" />

        <ImageView
            android:id="@+id/classView"
            android:layout_width="546dp"
            android:layout_height="525dp"
            android:onClick="handleClick"
            android:src="@drawable/frame2" />
        
        <ImageView
            android:id="@+id/labelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/room_class_label" />
        
    </FrameLayout>

    <ImageView
        android:id="@+id/basketView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/room_flower" />

    <ImageView
        android:id="@+id/floorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-30dp"
        android:scaleType="fitEnd"
        android:src="@drawable/room_floor" />

    <ImageView
        android:id="@+id/appsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="10dp"
        android:onClick="handleClick"
        android:src="@drawable/rm_apps"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/schoolbagView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:onClick="handleClick"
        android:src="@drawable/rm_schoolbag" />

 <ImageView
        android:id="@+id/profileView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/basketView"
        android:layout_below="@+id/basketView"
        android:layout_marginTop="-10dp"
        android:onClick="handleClick"
        android:src="@drawable/room_profile" />

    <ImageView
        android:id="@+id/messageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profileView"
        android:layout_below="@+id/profileView"
        android:onClick="handleClick"
        android:src="@drawable/room_message" />

</RelativeLayout>